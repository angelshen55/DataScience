<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:longClickable="true"
    android:background="@drawable/aisle_list_item_selector">

    <TextView
        android:id="@+id/txt_aisle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aisle"
        android:gravity="center_vertical"
        android:padding="@dimen/text_margin"
        android:layout_weight="0"
        android:singleLine="true"
        android:textAppearance="?attr/textAppearanceListItem"
        app:drawableStartCompat="@drawable/baseline_expand_down_24"
        android:drawablePadding="@dimen/expand_button_padding"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="?attr/colorSecondary" />

    <TextView
        android:id="@+id/txt_product_cnt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:padding="@dimen/text_margin"
        android:gravity="center_vertical"
        android:text=""
        android:textAppearance="?attr/textAppearanceListItem" />

</LinearLayout>
