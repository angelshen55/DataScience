<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/text_margin"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="@dimen/text_margin"
    android:layout_marginVertical="4dp"
    app:cardElevation="4dp"
    android:id="@+id/frg_product_list_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/product_list_item_selector">

        <TextView
            android:id="@+id/txt_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/text_margin"
            android:gravity="center_vertical"
            android:text="@string/product"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        <LinearLayout
            android:id="@+id/stp_qty_selector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_qty_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_remove_circle_outline_24"
                android:contentDescription="@string/decrement" />

            <EditText
                android:id="@+id/edt_qty"
                android:importantForAutofill="no"
                android:hint="@string/qty"
                android:minWidth="40dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:ignore="LabelFor" />

            <ImageButton
                android:id="@+id/btn_qty_inc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_add_circle_outline_24"
                android:contentDescription="@string/increment" />
        </LinearLayout>


        <CheckBox
            android:id="@+id/chk_in_stock"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:buttonTint="?attr/colorSecondary"
            android:checked="false" />

    </LinearLayout>
</androidx.cardview.widget.CardView>